{
  "name": "pyHPSU to MQTT Gateway",
  "version": "0.9.0",
  "slug": "pyhpsu2mqtt",
  "description": "pyHPSU - Connect via CAN bus to ROTEX/Daikin Heat Pump",
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "startup": "system",
  "boot": "auto",
  "host_network": true,
  "options": {
    "pyhpsu_device": "PYCAN",
    "pyhpsu_port": "",
    "mqtt_ip": "127.0.0.1",
    "mqtt_port": 1883,
    "mqtt_username": "",
    "mqtt_password": "",
    "mqtt_clientname": "rotex_hpsu",
    "mqtt_prefix": "rotex",
    "mqtt_commandtopic": "command",
    "canpi_timeout": 0.05,
    "jobs" : [
      { "command": "t_dhw", "interval": 10 }
    ]
  },
  "schema": {
    "pyhpsu_device": "str",
    "pyhpsu_port": "str?",
    "mqtt_ip": "str",
    "mqtt_port": "port",
    "mqtt_username": "str?",
    "mqtt_password": "password?",
    "mqtt_clientname": "str",
    "mqtt_prefix": "str",
    "mqtt_commandtopic": "str",
    "canpi_timeout": "float",
    "jobs" : [
      { "command": "str?", "interval": "int?" }
    ]
  },
  "image": "mreuter/{arch}-pyhpsu2mqtt"
}
